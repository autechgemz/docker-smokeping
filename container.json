{
  "variables": {
    "timezone": "Asia/Tokyo",
    "image_from": "alpine:latest",
    "service_port": "80"
  },
  "builders":[
    {
      "type": "docker",
      "image": "{{user `image_from`}}",
      "pull": true,
      "run_command": ["-dit", "{{.Image}}", "/bin/ash"],
      "export_path": "container.tar"
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "apk update",
	"apk upgrade --update --available",
	"apk add --no-cache ansible python3",
	"mkdir -p /tmp/ansible-local"
      ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/ansible-local"
    },
    {
      "type": "ansible-local",
      "playbook_file": "container.yml",
      "staging_directory": "/tmp/ansible-local",
      "extra_arguments": [
	"-e timezone={{user `timezone`}}",
	"-e ansible_python_interpreter=/usr/bin/python3"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "apk del --no-cache ansible python3"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "autechgemz/smokeping",
      "tag": "latest",
      "changes": [
        "ENV TZ {{user `timezone`}}",
        "VOLUME /var/lib/smokeping",
        "EXPOSE {{user `service_port`}}\/tcp",
        "ENTRYPOINT [ \"runsvdir\", \"-P\", \"\/services\/\" ]"
      ]
    }
  ]
}
